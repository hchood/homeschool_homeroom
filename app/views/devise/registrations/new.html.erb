<div class="row">
  <div class="large-8 small-12 columns large-centered">
    <div class="content">
      <h2>Sign up</h2>

      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div><%= f.label :first_name, 'First Name', label: false, placeholder: 'First name' %><br />
        <%= f.text_field :first_name %></div>

        <div><%= f.label :last_name, 'Last Name', label: false, placeholder: 'Last name' %><br />
        <%= f.text_field :last_name %></div>

        <div><%= f.label :email %><br />
        <%= f.email_field :email, :autofocus => true %></div>

        <div><%= f.label :interests %><br />
        <%= f.text_field :interests %></div>

        <div><%= f.label :password %><br />
        <%= f.password_field :password %></div>

        <div><%= f.label :password_confirmation, 'Password Confirmation' %><br />
        <%= f.password_field :password_confirmation %></div>

        <div><%= f.submit "Sign me up!", class: "button" %></div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
