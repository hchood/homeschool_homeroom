
<h1>All Groups</h1>

<p><%= link_to 'Add Group', new_group_path %></p>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Location</th>
  </tr>

<% @groups.each do |group| %>
  <tr>
    <td><%= group.name %></td>
    <td><%= group.description %></td>
    <td><%= group.location %></td>
    <% unless current_user.is_member_of(group) %>
      <td><%= button_to 'Join', {controller: :memberships, action: :create, group_id: group.id } %></td>
    <% else %>
      <td><%= link_to 'Profile', group_path(group) %></td>
    <% end %>
  </tr>
<% end %>

</table>
